<h1>Edit Post</h1>

<div class="row">
  <form class="col s12" action="/posts/edit/{{data._id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
      <div class="row">
        <div class="input-field">
          <input type="text" name="title" value="{{data.title}}">
          <label>Title</label>
        </div>

      </div>

      <div class="row">
        <div class="input-field">
          <select  name="status" value="{{data.status}}">
            <option value="public" >Public</option>

          </select>
          <label>status</label>
        </div>

      </div>

      <div class="row">
        <p>
          <input type="checkbox" name="allowcomments" class="filled-in" id="filled-in-box" {{#if data.allowComments}} checked="checked" {{/if}}>
            <label for="filled-in-box">allow comments</label>
        </p>

      </div>


      <div class="row">
        <div class="input-field">
          <h5>Your Post</h5>
          <textarea name="body" >{{data.body}}</textarea>

        </div>

      </div>

        <input type="submit" class="btn" value="save">

  </form>

</div>
