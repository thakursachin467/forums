<!--<h1>More posts From {{data.0.user.firstname}} {{data.0.user.lastname}}</h1> -->
<div class="col s12 m12" style="margin-top:50px">
  <div class="card ">
    <div class="row">
      <div class="col s6 m3">
        <div class="card-content">
            <img src="{{data.0.user.image}}" class="circle responsive-img" height="100px" width="100px">
            <span class="card-title">{{data.0.user.firstname}} {{data.0.user.lastname}}</span>
        </div>
      </div>
      <div class="col s6 m9">
        <table class="striped responsive-table">
          <thead>
            <th>
              <h3> {{data.length}}</h3>
            </th>

          </thead>
          <tbody>
            <thead>
              <th>
                <h4>Posts</h4>
              </th>


            </thead>
          </tbody>
          </table>
      </div>

    </div>
  </div>
</div>
<div class="row">
{{#each data}}
<div class="col s12 m4">
<div class="card">
  <div class="card-image">
  </div>
  <div class="card-content center-align">
    <h5 class="story-title">{{title}}</h5>
    <p class="story-text">{{striptags (truncate body 100)}}</p>

  </div>
    <div class="card-action center-align">
      <a class="btn grey" href="/posts/show/{{_id}}">
          Read More
      </a>
    </div>
</div>
</div>
{{/each}}
</div>
